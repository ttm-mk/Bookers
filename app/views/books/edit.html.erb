<h1>Editing Book</h1>

<%= form_with model: @book, url: '/books/:id', method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <p><%= f.submit "Update Book" %></p>
<% end %>
<p>
  <%= link_to "Show", '/books/#{book.id}' %>
   | <%= link_to "Back", '/books' %>
</p>