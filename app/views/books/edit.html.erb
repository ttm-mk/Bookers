<h1>Editing Book</h1>

<div class="error-text">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>このエラーだよ
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>
  

<div class="edit-form">
  <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p><%= f.submit "Update Book" %></p>
  <% end %>
</div>

<div class="show-back">
  <p>
    <%= link_to "Show", book_path(@book.id) %>
     | <%= link_to "Back", '/books' %>
  </p>
</div>