<h1>Editing Book</h1>

<div class="edit-form">
  <%= form_with model: @book, url: '/books/:id', method: :patch do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <p><%= f.submit "Update Book" %></p>
  <% end %>
</div>

<div class="show-back">
  <p>
    <%= link_to "Show", book_path(@book.id) %>
     | <%= link_to "Back", '/books' %>
  </p>
</div>